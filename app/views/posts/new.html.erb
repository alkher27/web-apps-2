<h1>New Post</h1>

<%= form_with :model => @post do |form| %>
  <%# add author name field %>
  <p>
    <%= form.label "author" %>
    <%= form.text_field "author" %>
  <%# add text body name field %>
    <%= form.label "body" %>
    <%= form.text_field "body" %>
  <%# add image field %>
    <%= form.label "image" %>
    <%= form.text_field "image" %>
  </p>
  <%= form.submit %>
<% end %>
